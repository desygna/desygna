{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "esnext",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "typeRoots": ["../node_modules/@types", "types/**"],
    "noEmit": true
  },

  "include": ["src/**/*", "types/**/*"],
  "exclude": [".storybook", "dist", "build", "node_modules"]
}
